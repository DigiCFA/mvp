{
  "expo": {
    "name": "mvp",
    "slug": "mvp",
    "version": "1.0.0",
    "scheme": "DigiCFA",
    "orientation": "portrait",
    "icon": "./assets/DigiCFA.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/DigiCFA.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.digicfa.app",
      "supportsTablet": true
    },
    "android": {
      "package": "com.digicfa.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photoPermission": "This app accesses your photos to upload them as your profile picture.",
          "cameraPermission": "This app accesses the camera to scan QR codes to receive and send payments."
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "DigiCFA needs access to your Camera."
        }
      ]
    ]
  }
}
